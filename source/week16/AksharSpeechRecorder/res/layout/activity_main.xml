<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textview1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/back_green"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.leaveme.ssad.MainActivity"
    android:keepScreenOn="true" >

    <TextView
        android:id="@+id/fileArea"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_above="@+id/button5"
        android:layout_marginBottom="50dp"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:text="@string/filearea"
       	/>

    <ImageView
        android:id="@+id/button5"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignRight="@+id/fileArea"
        android:layout_alignTop="@+id/button2"
        android:contentDescription="@string/button5"
        android:src="@drawable/play_button" />

    <Button
        android:id="@+id/button4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/fileArea"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@color/back2"
        android:text="@string/button4" />

    <Button
        android:id="@+id/button6"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="53dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@+id/button4"
        android:background="@color/back2"
        android:text="@string/button6" />

    <ImageView
        android:id="@+id/button2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/button6"
        android:layout_toLeftOf="@+id/button5"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/button2"
        android:onClick="startRecording"
        android:src="@drawable/record_button" />

</RelativeLayout>